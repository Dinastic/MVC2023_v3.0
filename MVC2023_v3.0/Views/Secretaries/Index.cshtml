@model IEnumerable<MVC2023_v3._0.Models.Secretary>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @TempData["name"]
            </td>
            <td>
                @TempData["surname"]
            </td>
            <td>
                @TempData["department"]
            </td>
            </tr>
    </tbody>
</table>
<div>
    <a asp-action="CreateStudent" asp-route-id="@TempData["phonenumber"]">Create new Student</a>|
    <a asp-action="CreateProfessor" asp-route-id="@TempData["phonenumber"]">Create new Professor</a>|
    <a asp-action="CreateCourse" asp-route-id="@TempData["phonenumber"]">Create new Course</a>|
    <a asp-action="SetCourseStudent" asp-route-id="@TempData["username"]">Assign a course</a>|
    <a asp-action="ShowAllCourses" asp-route-id="@TempData["username"]">ShowAllCourses</a>
