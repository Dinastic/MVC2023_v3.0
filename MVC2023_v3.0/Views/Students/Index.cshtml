@model IEnumerable<MVC2023_v3._0.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @TempData["name"]
            </td>
            <td>
                @TempData["surname"]
            </td>
            <td>
                @TempData["department"]
            </td>
            </tr>
    </tbody>
</table>
<div>
    <a asp-action="ShowAllGrades" asp-route-id="@TempData["username"]"> Show all grades </a> |
    
    <a asp-action="ShowSingleCourse" asp-route-id="@TempData["username"]"> Show grade for a specific course </a> |

    <a asp-action="ShowSingleSemester" asp-route-id="@TempData["username"]"> Show grades for a specific semester </a>
</div>
    
    
