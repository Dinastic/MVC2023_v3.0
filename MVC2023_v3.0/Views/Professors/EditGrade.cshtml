@model IEnumerable<MVC2023_v3._0.Models.Grade>

@{
    ViewData["Title"] = "EditGrade";
}

<h1>Professors</h1>
<h3>All graded</h3>


<table class="table">
    <thead>
        <tr>
            <th>
                Registration Number
            </th>
            <th>
                Course
            </th>
            <th>
                Score
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.CourseTitle)
                    </td>
                    <td>
                    @Html.TextBoxFor(modelItem => item.GradeCourseStudent, new {@class ="flat", id = "my-textbox"})
                    </td>
                    <td>
                    <a asp-action="SaveNewGrade" asp-route-regnum="@item.RegistrationNumber" asp-route-idcourse="@item.IdCourse" asp-route-grade="@item.GradeCourseStudent">Save new grade</a>
                    </td>
                    </tr>
        }
        @*prospathoume na broume to pws na perasoume to value to textbox ston controller*@
    </tbody>
</table>
            